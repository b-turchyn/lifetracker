{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "types": ["node"],
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false
  },
  "include": ["src/**/*.ts"],
  //"exclude": ["node_modules", "**/*.spec.ts"],
  "types": [ "node" ],
  "typeRoots": [ "../node_modules/@types" ]
}
